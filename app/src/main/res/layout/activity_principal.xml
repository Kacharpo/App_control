<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#F44336"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Principal">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/txt_c_ubicacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#000000"
                android:backgroundTint="#FFFFFF"
                android:ems="10"
                android:hint="@string/txt_c_ubicacion"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/tv_c_rutas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/tv_c_rutas"
                android:textColor="#FFFFFF" />

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ly_ruta"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_c_inicio"
                            android:layout_width="82dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/tv_c_inicio"
                            android:textColor="#FFFFFF" />

                        <TextView
                            android:id="@+id/tv_c_final"
                            android:layout_width="82dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/tv_c_final"
                            android:textColor="#FFFFFF" />

                        <TextView
                            android:id="@+id/tv_c_tiempo"
                            android:layout_width="82dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/tv_c_tiempo"
                            android:textColor="#FFFFFF" />

                        <TextView
                            android:id="@+id/tv_c_conductor"
                            android:layout_width="82dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/tv_c_conductor"
                            android:textColor="#FFFFFF" />

                        <TextView
                            android:id="@+id/tv_c_disponibilidad"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/tv_c_disponibilidad"
                            android:textColor="#FFFFFF" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLayout"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_c_iniciotxt"
                            android:layout_width="82dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#FFFFFF"
                            android:text="@string/tv_c_iniciotxt" />

                        <TextView
                            android:id="@+id/tv_c_finaltxt"
                            android:layout_width="82dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#FFFFFF"
                            android:text="@string/tv_c_finaltxt" />

                        <TextView
                            android:id="@+id/tv_c_tiempotxt"
                            android:layout_width="82dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#FFFFFF"
                            android:text="@string/tv_c_tiempotxt" />

                        <TextView
                            android:id="@+id/tv_c_conductortxt"
                            android:layout_width="82dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#FFFFFF"
                            android:text="@string/tv_c_conductortxt" />

                        <TextView
                            android:id="@+id/tv_c_disponibilidadtxt"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#FFFFFF"
                            android:text="@string/tv_c_disponibilidadtxt" />
                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>

            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                tools:layout="@layout/activity_principal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="#FFFFFF"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_c_conductor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    tools:srcCompat="@tools:sample/avatars" />

                <TextView
                    android:id="@+id/tv_c_ficha"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:text="@string/tv_c_ficha" />

            </LinearLayout>

        </LinearLayout>


    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>