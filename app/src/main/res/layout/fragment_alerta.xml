<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:background="#00FFFFFF"
    tools:context=".Alertas.Alerta">

    <FrameLayout
        android:id="@+id/fm_c_fondo"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:background="#FFFFFF"
        android:visibility="invisible">

    </FrameLayout>

    <FrameLayout
        android:id="@+id/fm_c_alerta"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:background="#00FFFFFF">

        <RelativeLayout
            android:id="@+id/rl_c_alertas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:visibility="invisible"
            tools:context=".Alertas.Alerta">

            <!-- TODO: Update blank fragment layout -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textVAlerta"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_c"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:animateLayoutChanges="true"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="4dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:id="@+id/ly_c"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:background="#FF3B2C"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="6dp">

                                <ImageView
                                    android:id="@+id/iv_c"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"

                                    android:layout_centerHorizontal="true"
                                    app:srcCompat="@drawable/ic_stat_buzon"
                                    app:tint="#FFFFFF" />

                                <TextView
                                    android:id="@+id/tv_c_c"
                                    android:layout_width="80dp"
                                    android:layout_height="30dp"
                                    android:layout_below="@id/iv_c"
                                    android:gravity="center"
                                    android:text="Mensaje"
                                    android:textColor="#FFFFFF"
                                    android:textSize="12sp" />
                            </RelativeLayout>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_c1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:animateLayoutChanges="true"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="4dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:id="@+id/ly_c1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:background="#FF5900"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="6dp">

                                <ImageView
                                    android:id="@+id/iv_c1"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_centerHorizontal="true"

                                    android:layout_gravity="center_horizontal"
                                    app:srcCompat="@drawable/ic_stat_inundacion"
                                    app:tint="#FFFFFF" />

                                <TextView
                                    android:id="@+id/tv_c_c1"
                                    android:layout_width="80dp"
                                    android:layout_height="30dp"
                                    android:layout_below="@id/iv_c1"
                                    android:gravity="center"
                                    android:text="Inundacion"
                                    android:textColor="#FFFFFF"
                                    android:textSize="12sp" />
                            </RelativeLayout>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_c2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:animateLayoutChanges="true"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="4dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:id="@+id/ly_c2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:background="#FFA200"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="6dp">

                                <ImageView
                                    android:id="@+id/iv_c2"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_centerHorizontal="true"

                                    android:layout_gravity="center_horizontal"
                                    app:srcCompat="@drawable/ic_stat_serviciop"
                                    app:tint="#FFFFFF" />

                                <TextView
                                    android:id="@+id/tv_c_c2"
                                    android:layout_width="80dp"
                                    android:layout_height="30dp"
                                    android:layout_below="@id/iv_c2"
                                    android:gravity="center"
                                    android:text="Servicio"
                                    android:textColor="#FFFFFF"
                                    android:textSize="12sp" />
                            </RelativeLayout>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_c3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:animateLayoutChanges="true"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="4dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:id="@+id/ly_c3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:background="#F44336"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="6dp">

                                <ImageView
                                    android:id="@+id/iv_c3"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_centerHorizontal="true"

                                    android:layout_gravity="center_horizontal"
                                    app:srcCompat="@drawable/ic_stat_tarjeta"
                                    app:tint="#FFFFFF" />

                                <TextView
                                    android:id="@+id/tv_c_c3"
                                    android:layout_width="80dp"
                                    android:layout_height="30dp"
                                    android:layout_below="@id/iv_c3"
                                    android:gravity="center"
                                    android:text="Tarjeta"
                                    android:textColor="#FFFFFF"
                                    android:textSize="12sp" />
                            </RelativeLayout>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_c4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:animateLayoutChanges="true"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="4dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:id="@+id/ly_c4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:background="#EA6A25"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="6dp">

                                <ImageView
                                    android:id="@+id/iv_c4"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"

                                    android:layout_centerHorizontal="true"
                                    app:srcCompat="@drawable/ic_stat_asaltante"
                                    app:tint="#FFFFFF" />

                                <TextView
                                    android:id="@+id/tv_c_c4"
                                    android:layout_width="80dp"
                                    android:layout_height="30dp"
                                    android:layout_below="@id/iv_c4"
                                    android:gravity="center"
                                    android:text="Asaltante"
                                    android:textColor="#FFFFFF"
                                    android:textSize="12sp" />
                            </RelativeLayout>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_c5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:animateLayoutChanges="true"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="4dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:id="@+id/ly_c5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:background="#FF5722"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="6dp">

                                <ImageView
                                    android:id="@+id/iv_c5"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_centerHorizontal="true"

                                    android:layout_gravity="center_horizontal"
                                    app:srcCompat="@drawable/ic_stat_traffic"
                                    app:tint="#FFFFFF" />

                                <TextView
                                    android:id="@+id/tv_c_c5"
                                    android:layout_width="80dp"
                                    android:layout_height="30dp"
                                    android:layout_below="@id/iv_c5"
                                    android:gravity="center"
                                    android:text="Trafico"
                                    android:textColor="#FFFFFF"
                                    android:textSize="12sp" />
                            </RelativeLayout>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_c6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:animateLayoutChanges="true"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="4dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:id="@+id/ly_c6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:background="#FF9900"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="6dp">

                                <ImageView
                                    android:id="@+id/iv_c6"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_centerHorizontal="true"

                                    android:layout_gravity="center_horizontal"
                                    app:srcCompat="@drawable/ic_stat_car"
                                    app:tint="#FFFFFF" />

                                <TextView
                                    android:id="@+id/tv_c_c6"
                                    android:layout_width="80dp"
                                    android:layout_height="30dp"
                                    android:layout_below="@id/iv_c6"
                                    android:gravity="center"
                                    android:text="Disponibilidad"
                                    android:textColor="#FFFFFF"
                                    android:textSize="12sp" />
                            </RelativeLayout>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_c7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:animateLayoutChanges="true"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="4dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:id="@+id/ly_c7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:background="#EDBC27"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="6dp">

                                <ImageView
                                    android:id="@+id/iv_c7"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_centerHorizontal="true"

                                    android:layout_gravity="center_horizontal"
                                    app:srcCompat="@drawable/ic_stat_asistencia"
                                    app:tint="#FFFFFF" />

                                <TextView
                                    android:id="@+id/tv_c_c7"
                                    android:layout_width="80dp"
                                    android:layout_height="30dp"
                                    android:layout_below="@id/iv_c7"
                                    android:gravity="center"
                                    android:text="Asistencia"
                                    android:textColor="#FFFFFF"
                                    android:textSize="12sp" />
                            </RelativeLayout>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/textVAlerta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Alertas"
                android:textColor="#0CF318"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="MissingConstraints,TextContrastCheck"
                tools:layout_editor_absoluteY="1dp" />

        </RelativeLayout>
    </FrameLayout>

    <Button
        android:id="@+id/btn_c_alerta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="150dp"
        android:layout_marginEnd="150dp"
        android:layout_marginBottom="20dp"
        android:text="A"
        app:cornerRadius="20dp"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/btn_c_atras"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="350dp"
        android:text="X"
        android:textSize="16sp"
        android:visibility="invisible"
        app:cornerRadius="20dp" />

</RelativeLayout>